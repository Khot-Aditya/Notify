<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorSecondary">@color/darkSecondary</item>
        <item name="colorPrimaryDark">@color/darkBackground</item>
        <item name="colorAccent">@color/darkPrimary</item>
        <item name="android:navigationBarColor">@color/darkBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDisablePreview">true</item>

        <!--        TODO - SET CORNER VALUE IN XML-->
        <item name="dialogCornerRadius">16dp</item>

        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

<!--    FAB-->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <!--        TODO - SET CORNER VALUE IN XML-->
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryText">@color/darkPrimaryText</item>
        <item name="colorSecondaryText">@color/darkSecondaryText</item>
        <item name="colorIcon">@color/darkIcon</item>
        <item name="colorBackground">@color/darkBackground</item>
        <item name="colorCardBackground">@color/darkDividerBackground</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColorPrimary">?attr/colorPrimaryText</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="menu_item" parent="Theme.MaterialComponents">
        <item name="android:textColor">?attr/colorPrimaryText</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>

    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimaryText</item>
        <!--        <item name="android:fontFamily">@font/bold</item>-->
    </style>
</resources>