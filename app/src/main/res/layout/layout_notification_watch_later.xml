<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBFBFB"
    android:id="@+id/linear_Container_WatchLater"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_app_icon" />

    <TextView
        android:id="@+id/txt_SubText_WatchLater"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="https://youtu.be/sfiuf7oqub"
        android:singleLine="true"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:textColor="#336EAE"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Time_WatchLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Compat.Notification.Time"
        android:textColor="@color/black"
        android:text="10:09 am â€¢ Fri, 24 Dec"/>

    <ImageView
        android:id="@+id/ic_Pin_Watchlater"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="15dp"
        android:src="@drawable/ic_pinned"/>
</LinearLayout>