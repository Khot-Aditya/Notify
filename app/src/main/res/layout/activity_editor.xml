<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.EditorActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_Editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_Editor"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorBackground"
            android:theme="@style/ToolBarStyle"
            app:menu="@menu/menu_notes"
            app:navigationIcon="@drawable/ic_arrow_small_left"
            app:popupTheme="@style/menu_item"
            app:title="Notes" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message"
                app:expandedHintEnabled="false"
                app:hintEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout_Editor"
                tools:layout_editor_absoluteX="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_EditorActivity_Message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="top"
                    android:maxHeight="200dp"
                    android:minHeight="200dp"
                    android:scrollbars="vertical" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--
                TODO -
                    ACTIONS:
                        1. SEARCH AS QUERY
                        2. SEND A MAIL
                        3. MAKE A PHONE CALL
                        4. CREATE A NEW CONTACT
                        5. TEXT THIS NUMBER
                        6. SHARE
                        7. COPY
                        8. PIN/UNPIN
                        9. EXTRACT URL, EMAIL, PHONE, YOUTUBE WATCH LATER
                        10. CATEGORY

            -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Category"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="292dp" />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Date time"
                    tools:layout_editor_absoluteX="341dp"
                    tools:layout_editor_absoluteY="292dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_app_logo"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search as Query"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="502dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send a Mail"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="359dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="340dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to contact"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="396dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Text Message"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="450dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="541dp" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy to Clipboard"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="605dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_app_logo"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="330dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>