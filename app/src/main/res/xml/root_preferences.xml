<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="App Settings">

        <ListPreference
            android:title="@string/theme_title"
            app:defaultValue="follow_system"
            app:dialogTitle="@string/theme_dialog_title"
            app:entries="@array/theme_title"
            app:entryValues="@array/theme_values"
            app:icon="@drawable/ic_theme"
            app:key="@string/theme_title"
            app:negativeButtonText=""
            app:positiveButtonText=""
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            android:summary="@string/attach_pin_description"
