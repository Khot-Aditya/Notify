            app:entryValues="@array/temporary_notes_values"
            app:icon="@drawable/ic_temporary_notes"
            app:key="@string/temporary_notes_title"
            app:negativeButtonText=""
            app:positiveButtonText=""
            app:summary="@string/temporary_notes_description"
            app:useSimpleSummaryProvider="false" />


